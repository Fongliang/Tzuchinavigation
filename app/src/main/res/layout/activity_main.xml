<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Img_bk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ttt"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <Button
        android:id="@+id/b1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_capsule"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Home"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="#004d8d"/>
    <Button
        android:id="@+id/b5"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="800dp"
        android:background="@drawable/shape_capsule"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="翻譯"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="#004d8d"
        android:layout_toRightOf="@id/b1"
        android:drawableLeft="@drawable/zhtoen"/>
    <Button
        android:id="@+id/b6"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="800dp"
        android:background="@drawable/shape_capsule"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="緊急聯絡"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="#FF1744"
        android:layout_below="@id/b5"
        android:layout_alignRight="@id/b5"
        android:drawableLeft="@drawable/phone"/>
    <Button
        android:id="@+id/b2"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_capsule"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="302"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="#004d8d"
        android:layout_below="@id/b1"/>
    <Button
        android:id="@+id/b3"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_capsule"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="elevator"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="#004d8d"
        android:layout_below="@id/b2"/>
    <Button
        android:id="@+id/b4"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_capsule"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="exit"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="#004d8d"
        android:layout_below="@id/b3"
        android:drawableLeft="@drawable/exit"/>
</RelativeLayout>